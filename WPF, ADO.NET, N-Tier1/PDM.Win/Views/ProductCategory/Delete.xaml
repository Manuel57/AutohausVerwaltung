<Window x:Class="PDM.Win.Views.ProductCategory.Delete"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         Title="Delete Product Category"  Height="160" Width="300" WindowStyle="None" WindowStartupLocation="CenterScreen"  Background="#F4EFE9"
        ResizeMode="NoResize" BorderBrush="Transparent" BorderThickness="1">
    <DockPanel  Margin="10">
        <TextBlock DockPanel.Dock="Top" HorizontalAlignment="Center">Delete Product Category</TextBlock>
        <TextBlock DockPanel.Dock="Top" Margin="0,30,0,0">Are you Sure?</TextBlock>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Height="30" DockPanel.Dock="Bottom">
            <Button Width="60" Click="Close_Click" >Close</Button>
            <Button Width="60" Margin="10,0,0,0" Click="Delete_Click">OK</Button>
        </StackPanel>
    </DockPanel>
</Window>
