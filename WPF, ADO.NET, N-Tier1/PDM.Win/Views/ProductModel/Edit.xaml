<Window x:Class="PDM.Win.Views.ProductModel.Edit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Product Category"  Height="160" Width="300" WindowStyle="None" WindowStartupLocation="CenterScreen"  Background="#F4EFE9"
        ResizeMode="NoResize" BorderBrush="Transparent" BorderThickness="1">
    <DockPanel  Margin="10">
        <TextBlock  DockPanel.Dock="Top" HorizontalAlignment="Center">Edit Product Model</TextBlock>
        <TextBlock Margin="0,10,0,0"  DockPanel.Dock="Top">Product Model :</TextBlock>
        <TextBox Text="{Binding SelectedItem.Name}"  DockPanel.Dock="Top"  Height="40"></TextBox>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Bottom"
                    Height="30"  VerticalAlignment="Bottom">
            <Button Width="60" Click="Close_Click" >Close</Button>
            <Button Width="60" Margin="10,0,0,0" Click="Save_Click">Save</Button>
        </StackPanel>
    </DockPanel>
</Window>
