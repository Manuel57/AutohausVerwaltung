<Window x:Class="LagerVerwaltung.View.BasicSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LagerVerwaltung.View"
        mc:Ignorable="d"
        Title="BasicSettings" Height="304.737" Width="350.526">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label x:Name="lblWerkstatt" Grid.Column="0" Content="Bitte wähle deinen Standort" HorizontalAlignment="Left" Height="39" Margin="0,41,0,0" VerticalAlignment="Top" Width="172"/>
        <ComboBox x:Name="cmbWerkstatt" Grid.Column="1" HorizontalAlignment="Left" Height="24" Margin="31,41,0,0" VerticalAlignment="Top" Width="130" SelectionChanged="cmbWerkstatt_SelectionChanged"/>
        <Label x:Name="lblMenge" Content="Gib den Mindestlagerbestand ein" HorizontalAlignment="Left" Height="29" Margin="10,85,0,0" VerticalAlignment="Top" Width="152"/>
        <TextBox x:Name="txtMin" Grid.Column="1" HorizontalAlignment="Left" Height="29" Margin="31,85,0,0" TextWrapping="Wrap" Text="100" VerticalAlignment="Top" Width="130"/>


    </Grid>

</Window>
