<Window x:Class="PDM.Win.Views.ProductModel.Details"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         Title="Edit Product Category"  Height="200" Width="300" WindowStyle="None" WindowStartupLocation="CenterScreen"  Background="#F4EFE9"
        ResizeMode="NoResize" BorderBrush="Transparent" BorderThickness="1">
    <DockPanel  Margin="10">
        <TextBlock DockPanel.Dock="Top" HorizontalAlignment="Center">Details Product Model</TextBlock>
        <TextBlock DockPanel.Dock="Top" Margin="0,10,0,0">Product Model :</TextBlock>
        <TextBox DockPanel.Dock="Top" Text="{Binding SelectedItem.Name}" Height="40" IsReadOnly="True"></TextBox>
        <TextBlock DockPanel.Dock="Top">Created Date :</TextBlock>
        <TextBox DockPanel.Dock="Top" Text="{Binding SelectedItem.ModifiedDate}" Height="40" IsReadOnly="True"></TextBox>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Height="30" DockPanel.Dock="Bottom" Margin="0,10,0,0" VerticalAlignment="Bottom">
            <Button Width="60" Click="Close_Click" >Close</Button>
        </StackPanel>
    </DockPanel>
</Window>
