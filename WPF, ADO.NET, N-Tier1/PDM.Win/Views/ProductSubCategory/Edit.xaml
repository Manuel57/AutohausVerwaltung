<Window x:Class="PDM.Win.Views.ProductSubCategory.Edit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Product Category"  Height="160" Width="300" WindowStyle="None" WindowStartupLocation="CenterScreen"  Background="#F4EFE9"
        ResizeMode="NoResize" BorderBrush="Transparent" BorderThickness="1">
    <DockPanel  Margin="10">
        <TextBlock DockPanel.Dock="Top" HorizontalAlignment="Center">Edit Product Category</TextBlock>
        <TextBlock DockPanel.Dock="Top" Margin="0,10,0,0">Product Model :</TextBlock>
        <TextBox DockPanel.Dock="Top" Text="{Binding SelectedItem.Name}" Height="40"></TextBox>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Height="30" DockPanel.Dock="Bottom">
            <Button Width="60" Click="Close_Click" >Close</Button>
            <Button Width="60" Margin="10,0,0,0" Click="Save_Click">Save</Button>
        </StackPanel>
    </DockPanel>
</Window>
